<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbackground">

    <TextView
        android:id="@+id/stafftext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_bold"
        android:text="Staff"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/staffsignupemail"
        app:layout_constraintTop_toBottomOf="@+id/staffsignuptitle"
        tools:layout_editor_absoluteX="169dp" />

    <ImageView
        android:id="@+id/staffsignupicon"
        android:layout_width="192dp"
        android:layout_height="170dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/staffsignuptitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        app:srcCompat="@drawable/applogo"
        tools:layout_editor_absoluteX="109dp" />

    <TextView
        android:id="@+id/staffsignuptitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_bold"
        android:text="nplibrary"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/stafftext2"
        app:layout_constraintTop_toBottomOf="@+id/staffsignupicon"
        tools:layout_editor_absoluteX="122dp" />

    <Button
        android:id="@+id/staffsignupsubmit"
        android:layout_width="246dp"
        android:layout_height="56dp"
        android:background="#000000"
        android:fontFamily="@font/open_sans_bold"
        android:text="Sign up"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/staffsignupcancel"
        app:layout_constraintTop_toBottomOf="@+id/staffsignupname"
        tools:layout_editor_absoluteX="82dp" />

    <Button
        android:id="@+id/staffsignupcancel"
        android:layout_width="246dp"
        android:layout_height="56dp"
        android:background="#000000"
        android:fontFamily="@font/open_sans_bold"
        android:text="@android:string/cancel"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/staffsignupsubmit"
        tools:layout_editor_absoluteX="82dp" />

    <EditText
        android:id="@+id/staffsignupname"
        android:layout_width="246dp"
        android:layout_height="47dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:fontFamily="@font/open_sans"
        android:hint="Enter Your Name"
        android:inputType="textPersonName"
        android:textColor="#8E8D8D"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/staffsignupsubmit"
        app:layout_constraintTop_toBottomOf="@+id/staffsignupconfirm"
        tools:layout_editor_absoluteX="82dp" />

    <EditText
        android:id="@+id/staffsignupconfirm"
        android:layout_width="246dp"
        android:layout_height="47dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:fontFamily="@font/open_sans"
        android:hint="Confirm Your Password"
        android:inputType="textPassword"
        android:textColor="#8E8D8D"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/staffsignupname"
        app:layout_constraintTop_toBottomOf="@+id/staffsignuppassword"
        tools:layout_editor_absoluteX="82dp" />

    <EditText
        android:id="@+id/staffsignuppassword"
        android:layout_width="246dp"
        android:layout_height="47dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:fontFamily="@font/open_sans"
        android:hint="Enter Your Password"
        android:inputType="textPassword"
        android:textColor="#8E8D8D"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/staffsignupconfirm"
        app:layout_constraintTop_toBottomOf="@+id/staffsignupemail"
        tools:layout_editor_absoluteX="82dp" />

    <EditText
        android:id="@+id/staffsignupemail"
        android:layout_width="246dp"
        android:layout_height="47dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:fontFamily="@font/open_sans"
        android:hint="Enter Your Email"
        android:inputType="textPersonName"
        android:textColor="#8E8D8D"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/staffsignuppassword"
        app:layout_constraintTop_toBottomOf="@+id/stafftext2"
        tools:layout_editor_absoluteX="82dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
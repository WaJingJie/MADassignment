<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backgroundlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbackground"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/welcomeicon"
        android:layout_width="170dp"
        android:layout_height="197dp"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toTopOf="@+id/welcometitle"
        app:layout_constraintEnd_toEndOf="@+id/welcometitle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/welcometitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/applogo" />

    <Button
        android:id="@+id/welcomelogin"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="191dp"
        android:layout_height="52dp"
        android:layout_marginBottom="20dp"
        android:background="#000000"
        android:fontFamily="@font/open_sans_bold"
        android:text="Login"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/welcometext"
        app:layout_constraintEnd_toEndOf="@+id/welcometext"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/welcometext"
        app:layout_constraintTop_toBottomOf="@+id/welcometitle" />

    <TextView
        android:id="@+id/welcometext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/open_sans"
        android:text="Or if you don't have an account,"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/welcomesignup"
        app:layout_constraintEnd_toEndOf="@+id/welcomesignup"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/welcomesignup"
        app:layout_constraintTop_toBottomOf="@+id/welcomelogin" />

    <Button
        android:id="@+id/welcomesignup"
        android:layout_width="187dp"
        android:layout_height="49dp"
        android:layout_marginBottom="20dp"
        android:background="#000000"
        android:fontFamily="@font/open_sans_bold"
        android:text="Sign Up"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/returnstudent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcometext" />

    <Button
        android:id="@+id/returnstudent"
        android:layout_width="187dp"
        android:layout_height="49dp"
        android:layout_marginBottom="100dp"
        android:background="#000000"
        android:fontFamily="@font/open_sans_bold"
        android:text="Cancel"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/welcometitle"
        android:layout_width="168dp"
        android:layout_height="63dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="nplibrary"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/welcomelogin"
        app:layout_constraintEnd_toEndOf="@+id/welcomelogin"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/welcomelogin"
        app:layout_constraintTop_toBottomOf="@+id/welcomeicon" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/googlebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
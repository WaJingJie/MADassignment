<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/frame"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        app:cardBackgroundColor="#000000"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/overduebookpic"
            android:layout_width="186dp"
            android:layout_height="179dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/displaybk" />

        <TextView
            android:id="@+id/overdueisbn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/open_sans"
            android:text="ISBN: "
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/overduebookpic"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/overduebookname"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:text="Name: "
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/overduebookpic"
            app:layout_constraintTop_toBottomOf="@+id/overdueisbn" />

        <TextView
            android:id="@+id/overduedate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Due Date:"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/overduebookpic"
            app:layout_constraintTop_toBottomOf="@+id/overduebookname" />

        <TextView
            android:id="@+id/borrowdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:text="Borrow Date:"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/overduebookpic"
            app:layout_constraintTop_toBottomOf="@+id/returndate" />

        <TextView
            android:id="@+id/returndate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:text="Return Date:"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/overduebookpic"
            app:layout_constraintTop_toBottomOf="@+id/overduedate" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:text="Duration:"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/overduebookpic"
            app:layout_constraintTop_toBottomOf="@+id/borrowdate" />

        <TextView
            android:id="@+id/fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:text="Fee:"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/overduebookpic"
            app:layout_constraintTop_toBottomOf="@+id/duration" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
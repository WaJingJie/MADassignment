<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backgroundlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbackground"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/stafftext3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_bold"
        android:text="Staff"
        android:textColor="#000000"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="276dp" />

    <ImageView
        android:id="@+id/staffwelcomeicon"
        android:layout_width="170dp"
        android:layout_height="197dp"
        app:srcCompat="@drawable/applogo"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="25dp" />

    <Button
        android:id="@+id/staffwelcomelogin"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="191dp"
        android:layout_height="52dp"
        android:background="#000000"
        android:fontFamily="@font/open_sans_bold"
        android:text="Login"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="341dp" />

    <TextView
        android:id="@+id/staffwelcometext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans"
        android:text="Or if you don't have an account,"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/staffwelcomesignup"
        app:layout_constraintEnd_toEndOf="@+id/staffwelcomesignup"
        app:layout_constraintStart_toStartOf="@+id/staffwelcomesignup"
        app:layout_constraintTop_toBottomOf="@+id/staffwelcomelogin"
        app:layout_constraintVertical_bias="0.428" />

    <Button
        android:id="@+id/staffwelcomesignup"
        android:layout_width="187dp"
        android:layout_height="49dp"
        android:layout_marginBottom="132dp"
        android:background="#000000"
        android:fontFamily="@font/open_sans_bold"
        android:text="Sign Up"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcometext" />

    <TextView
        android:id="@+id/staffwelcometitle"
        android:layout_width="168dp"
        android:layout_height="63dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="nplibrary"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="214dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
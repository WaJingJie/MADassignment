<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbackground"
    tools:context=".LoginPage">

    <EditText
        android:id="@+id/loginemail"
        android:layout_width="239dp"
        android:layout_height="40dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:fontFamily="@font/open_sans"
        android:hint="Enter Your Email"
        android:inputType="textPersonName"
        android:textColor="#8E8D8D"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/loginpassword"
        app:layout_constraintEnd_toEndOf="@+id/loginpassword"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/loginpassword"
        app:layout_constraintTop_toBottomOf="@+id/logintitle" />

    <EditText
        android:id="@+id/loginpassword"
        android:layout_width="239dp"
        android:layout_height="40dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:fontFamily="@font/open_sans"
        android:hint="Enter Your Password"
        android:inputType="textPersonName"
        android:textColor="#8E8D8D"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/loginsubmit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginemail" />

    <ImageView
        android:id="@+id/loginicon"
        android:layout_width="137dp"
        android:layout_height="114dp"
        app:layout_constraintBottom_toTopOf="@+id/logintitle"
        app:layout_constraintEnd_toEndOf="@+id/logintitle"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/logintitle"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/applogo" />

    <TextView
        android:id="@+id/logintitle"
        android:layout_width="170dp"
        android:layout_height="57dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="nplibrary"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/loginemail"
        app:layout_constraintEnd_toEndOf="@+id/loginemail"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/loginemail"
        app:layout_constraintTop_toBottomOf="@+id/loginicon" />

    <Button
        android:id="@+id/loginsubmit"
        android:layout_width="129dp"
        android:layout_height="42dp"
        android:layout_marginStart="152dp"
        android:background="#000000"
        android:fontFamily="@font/open_sans_bold"
        android:text="Submit"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/logincancel"
        app:layout_constraintEnd_toStartOf="@+id/logincancel"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/logincancel"
        android:layout_width="129dp"
        android:layout_height="42dp"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="28dp"
        android:background="#000000"
        android:fontFamily="@font/open_sans_bold"
        android:text="@android:string/cancel"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/loginsubmit" />

</androidx.constraintlayout.widget.ConstraintLayout>
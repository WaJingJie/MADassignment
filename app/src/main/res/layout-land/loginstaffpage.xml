<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbackground"
    tools:context=".LoginPage">

    <Button
        android:id="@+id/stafflogincancel"
        android:layout_width="129dp"
        android:layout_height="42dp"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="18dp"
        android:background="#000000"
        android:fontFamily="@font/open_sans_bold"
        android:text="@android:string/cancel"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/staffloginsubmit" />

    <EditText
        android:id="@+id/staffloginemail"
        android:layout_width="239dp"
        android:layout_height="40dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:fontFamily="@font/open_sans"
        android:hint="Enter Your Email"
        android:inputType="textPersonName"
        android:textColor="#8E8D8D"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/staffloginsubmit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/staffloginpassword" />

    <EditText
        android:id="@+id/staffloginpassword"
        android:layout_width="239dp"
        android:layout_height="40dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:fontFamily="@font/open_sans"
        android:hint="Enter Your Password"
        android:inputType="textPassword"
        android:textColor="#8E8D8D"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/staffloginemail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stafftext" />

    <Button
        android:id="@+id/staffloginsubmit"
        android:layout_width="129dp"
        android:layout_height="42dp"
        android:layout_marginStart="152dp"
        android:background="#000000"
        android:fontFamily="@font/open_sans_bold"
        android:text="Login"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/stafflogincancel"
        app:layout_constraintEnd_toStartOf="@+id/stafflogincancel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/staffloginicon"
        android:layout_width="149dp"
        android:layout_height="119dp"
        app:layout_constraintBottom_toTopOf="@+id/stafflogintitle"
        app:layout_constraintEnd_toEndOf="@+id/stafflogintitle"
        app:layout_constraintStart_toStartOf="@+id/stafflogintitle"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/applogo" />

    <TextView
        android:id="@+id/stafflogintitle"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_bold"
        android:text="nplibrary"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/stafftext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/staffloginicon" />

    <TextView
        android:id="@+id/stafftext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_bold"
        android:text="Staff"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/staffloginpassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stafflogintitle" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backgroundlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbackground"
    tools:context=".Select">

    <ImageView
        android:id="@+id/selecticon"
        android:layout_width="149dp"
        android:layout_height="119dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/applogo" />

    <Button
        android:id="@+id/selectstudent"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="191dp"
        android:layout_height="52dp"
        android:background="#000000"
        android:fontFamily="@font/open_sans_bold"
        android:text="Student"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selecttitle" />

    <TextView
        android:id="@+id/selecttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/open_sans"
        android:text="OR"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectstudent" />

    <Button
        android:id="@+id/selectstaff"
        android:layout_width="187dp"
        android:layout_height="49dp"
        android:layout_marginTop="11dp"
        android:background="#000000"
        android:fontFamily="@font/open_sans_bold"
        android:text="Staff"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selecttext"
        app:layout_constraintVertical_bias="0.137" />

    <TextView
        android:id="@+id/selecttitle"
        android:layout_width="168dp"
        android:layout_height="63dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="nplibrary"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selecticon" />

</androidx.constraintlayout.widget.ConstraintLayout>